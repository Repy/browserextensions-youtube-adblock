{
  "manifest_version": 2,
  "version": "0.0.2",
  "author": "Repy",
  "description": "YT Ad Block",
  "name": "YT Ad Block",
  "icons": {
    "16": "icon-16.png",
    "19": "icon-24.png",
    "20": "icon-24.png",
    "24": "icon-24.png",
    "32": "icon-48.png",
    "38": "icon-48.png",
    "48": "icon-48.png",
    "120": "icon-120.png",
    "128": "icon-chrome128.png"
  },
  "permissions": [
    "https://www.youtube.com/*",
    "https://music.youtube.com/*",
    "https://*.doubleclick.net/*",
    "https://pagead2.googlesyndication.com/*",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],
  "applications": {
    "gecko": {
      "id": "youtubeadblock@repy.info"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "YT Ad Block",
    "default_area": "menupanel",
    "default_icon": {
      "16": "icon-16.png",
      "19": "icon-24.png",
      "20": "icon-24.png",
      "24": "icon-24.png",
      "32": "icon-48.png",
      "38": "icon-48.png",
      "48": "icon-48.png",
      "120": "icon-120.png",
      "128": "icon-128.png"
    }
  }
}