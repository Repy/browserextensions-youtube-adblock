{
  "manifest_version": 3,
  "version": "0.0.8",
  "minimum_chrome_version": "120",
  "author": "Repy",
  "name": "YT Ad Block",
  "description": "YT Ad Block",
  "permissions": [
    "userScripts"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "19": "icon-24.png",
    "20": "icon-24.png",
    "24": "icon-24.png",
    "32": "icon-48.png",
    "38": "icon-48.png",
    "48": "icon-48.png",
    "120": "icon-120.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "19": "icon-24.png",
      "20": "icon-24.png",
      "24": "icon-24.png",
      "32": "icon-48.png",
      "38": "icon-48.png",
      "48": "icon-48.png",
      "120": "icon-120.png",
      "128": "icon-128.png"
    },
    "default_title": "YT Ad Block"
  },
  "background": {
    "service_worker": "background.js"
  }
}